<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MityaginaNP.UI.Page"
      xmlns:local1="clr-namespace:nGantt;assembly=nGantt"
      xmlns:syncfusion="http://schemas.syncfusion.com/wpf" xmlns:gantt="clr-namespace:Syncfusion.Windows.Controls.Gantt;assembly=Syncfusion.Gantt.Wpf" x:Class="MityaginaNP.UI.Page.PageGanttChart"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageGanttChart" Loaded="Page_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition  Height="auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel HorizontalAlignment='Center' Orientation="Horizontal" Grid.Row="0">
            <Button Margin="1" Content="Назад" Name="btnPrevious" Click="btnPrevious_Click" Style="{StaticResource addButton}"/>
            <DatePicker Margin="10 0" Name="dateTimePicker" SelectedDateChanged="dateTimePicker_SelectedDateChanged" />
            <Button Margin="1" Content="Вперед" Name="btnNext" Click="btnNext_Click" Style="{StaticResource addButton}"/>
        </StackPanel>
        <local1:GanttControl x:Name="ganttControl1" Grid.Row="1"/>
    </Grid>
</Page>
