<Window x:Class="MityaginaNP.UI.Window.WinAuth"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:MityaginaNP.UI.Window"
        xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        Height="720" Width="1080" WindowStartupLocation="CenterScreen" ResizeMode="CanResize"
        AllowsTransparency="True" Background="Transparent">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
    </Window.Resources>

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Войдите в систему" HorizontalAlignment="Center" FontSize="25" Foreground="{StaticResource ColorDeepBlue}" />
            <Grid Width="300" HorizontalAlignment="Center" VerticalAlignment="Top">
                <TextBlock Margin="20 0" VerticalAlignment="Center" Foreground="{StaticResource ColorBlue}" 
                               IsHitTestVisible="False" Panel.ZIndex="1" Visibility="{Binding ElementName=txtSearch, Path=Text.IsEmpty,Converter={StaticResource BoolToVis}}"><Run Text="Логин"/></TextBlock>
                <TextBox Name="textLogin" Style="{StaticResource textboxSearch}"/>
            </Grid>
            <Grid Width="300" HorizontalAlignment="Center" VerticalAlignment="Top">
                <TextBlock Margin="20 0" VerticalAlignment="Center" Foreground="{StaticResource ColorBlue}" 
                               IsHitTestVisible="False" Panel.ZIndex="1" Visibility="{Binding ElementName=txtSearch, Path=Text.IsEmpty,Converter={StaticResource BoolToVis}}"><Run Text="Пароль"/></TextBlock>
                <PasswordBox Name="textPass"/>
            </Grid>
            <Button x:Name="btn_Login" Content="Войти" Click="btn_Login_Click" HorizontalAlignment="Center" Style="{StaticResource addButton}"  />
            <Button x:Name="btn_Clear" Content="Очистить" Click="btn_Clear_Click" HorizontalAlignment="Center" Style="{StaticResource addButton}" Margin="0 10 0 0"/>
        </StackPanel>
    </Grid>
</Window>
