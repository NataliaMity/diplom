<UserControl x:Class="MityaginaNP.UI.UserControl.UCProject1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MityaginaNP.UI.UserControl"
             mc:Ignorable="d">
    <Grid ScrollViewer.HorizontalScrollBarVisibility="Hidden" ScrollViewer.VerticalScrollBarVisibility="Hidden" Grid.IsSharedSizeScope="True">
        <StackPanel>
            <TextBlock Text="{Binding ProjectName}" FontSize="25" />
            <TextBlock Text="{Binding ProjectDescription}"  Width="auto"/>
            <StackPanel Orientation="Horizontal">
                <Button Content="Задачи" Name="ProjectTasks" Click="ProjectTasks_Click" />
                <Button Content="Документация" />
                <Button Content="Сотрудники" />
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
