<UserControl x:Class="MityaginaNP.UI.UserControl.UCNotification"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MityaginaNP.UI.UserControl"
             mc:Ignorable="d" 
              Width="200">
    <StackPanel Orientation="Vertical">
        <TextBlock Margin="0" FontSize="12" TextWrapping="Wrap">
            <Run Text="Системное оповещение для " />
            <Run Text="{Binding User.LastName}" />!
        </TextBlock>
        <TextBlock Margin="0" FontSize="12" TextWrapping="Wrap">
        <Run Text="{Binding NotificationType.TypeName}"/>: 
            <Run Text="{Binding TaskProject.TaskText}" />
        </TextBlock>
        <TextBlock Margin="0" FontSize="12" TextWrapping="Wrap">
            <Run Text="Дата: " />
        <Run Text="{Binding NotificationDateTime}" />
        </TextBlock>
        
    </StackPanel>
    
</UserControl>
