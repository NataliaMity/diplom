<UserControl x:Class="MityaginaNP.UI.UserControl.UCStaff"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MityaginaNP.UI.UserControl" xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <StackPanel Orientation="Vertical">
                <TextBlock Text="Имя: " />
                <TextBlock x:Name="txtName" Text="{Binding LastName}" />
                <TextBlock Text="{Binding FirstName}" /> 
                <TextBlock Text="{Binding Patronymic}" />
                <TextBlock  Text="Задач в работе:"/>
                <TextBlock x:Name="txtCount" />
            </StackPanel>
            <Button Click="btnMore_Click" x:Name="btnMore" Style="{StaticResource addButton}">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Icon:PackIconMaterial Kind="FormatListText" Style="{StaticResource ucButtonIcon}"/>
                    <TextBlock Text="Задачи сотрудника" FontSize="13" Padding="0" Margin="1"/>
                </StackPanel>
            </Button>
        </StackPanel>    
    </Grid>
</UserControl>
